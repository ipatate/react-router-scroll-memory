{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "exemple/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "exemple/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "status": 404, "dest": "exemple/404.html" }
  ]
}
